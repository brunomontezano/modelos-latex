	title = {Caminhos legais e ilegais para o Acesso Aberto: uma exploração de controvérsias},
	volume = {31},
	issn = {2318-0889, 0103-3786},
	url = {http://www.scielo.br/scielo.php?script=sci_arttext&pid=S0103-37862019000100311&tlng=pt},
